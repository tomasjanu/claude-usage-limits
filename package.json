{
  "name": "claude-usage-limits",
  "displayName": "Claude Usage Limits",
  "description": "Shows Claude.ai usage limits in the VS Code status bar",
  "version": "0.1.0",
  "author": "Tomas Janu",
  "publisher": "tomasjanu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomasjanu/claude-usage-limits"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claudeUsage.refresh",
        "title": "Claude Usage: Refresh"
      },
      {
        "command": "claudeUsage.setSessionKey",
        "title": "Claude Usage: Set Session Key"
      }
    ],
    "configuration": {
      "title": "Claude Usage Limits",
      "properties": {
        "claudeUsage.authMethod": {
          "type": "string",
          "default": "auto",
          "enum": ["auto", "cookie"],
          "enumDescriptions": [
            "Auto-detect OAuth token from Claude Code credentials, fall back to session cookie",
            "Use session cookie from browser"
          ],
          "description": "Authentication method for fetching usage data"
        },
        "claudeUsage.sessionKey": {
          "type": "string",
          "default": "",
          "description": "Session key cookie from claude.ai (required if authMethod is 'cookie')"
        },
        "claudeUsage.refreshInterval": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "Refresh interval in minutes"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
